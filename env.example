# Adobe OAuth Configuration
FRAMEIO_CLIENT_ID=your_client_id_here
FRAMEIO_CLIENT_SECRET=your_client_secret_here

# Frame.io API
FRAMEIO_API_BASE_URL=https://api.frame.io/v2

# Webhook Configuration (optional)
FRAMEIO_WEBHOOK_SECRET=your_webhook_secret_here

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql://user:password@host:port/database
# OR for Vercel
POSTGRES_URL=your_vercel_postgres_url

# Session Encryption
SESSION_SECRET=your_random_32_character_secret_here

# Optional: Override redirect URI (useful for custom domains)
# Leave unset to use dynamic URLs (works with Vercel preview deployments)
# NEXT_PUBLIC_AUTH_URL=https://your-custom-domain.com

# Development
NODE_ENV=development
